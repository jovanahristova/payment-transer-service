<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="07-add-password-field" author="banking-team" context="dev,prod">
        <comment>Add password_hash field to users table</comment>

        <addColumn tableName="users">
            <column name="password_hash" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <sql>
            UPDATE users
            SET password_hash = '$2a$10$dXJ3SW6G7P50lGmMkkmwe.20cQQubK3.HZWzG3YB1tlRy.fqvM/BG'
            WHERE password_hash IS NULL;
            -- This is bcrypt hash for 'Password123!'
        </sql>

        <addNotNullConstraint
            tableName="users"
            columnName="password_hash"
            columnDataType="VARCHAR(255)"/>

        <rollback>
            <dropColumn tableName="users" columnName="password_hash"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
